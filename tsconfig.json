{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"module": "esnext",
		"lib": [ "DOM", "ES2018" ],
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
		},
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly",
				},
			},
		],
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"outDir": "./dist",
		"target": "ES2018",
		"checkJs": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules/*",
		"dist/*",
	],
}
