{
	"compilerOptions": {
		"module": "esnext",
		"lib": [ "DOM", "ES2018" ],
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
		},
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules/*",
		"dist/*",
	],
}
